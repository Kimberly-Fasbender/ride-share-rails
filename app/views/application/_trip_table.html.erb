<article class="trip_table">
  <table>
    <thead>
      <tr>
        <th width="5%">ID</th>
        <th width="20%">Date</th>
        <th width="20%">Driver</th>
        <th width="20%">Passenger</th>
        <th widtt="10%">Price</th>
        <th width="5%">Rating</th>
        <th width="20%">Update</th>
      </tr>
    </thead>
    <tbody>   

      <% trips.each do |trip| %>
        <tr>
          <td>
            <%= link_to "#{trip.id}", trip_path(trip.id) %> 
          </td>
          <td>
            <%= trip.date %> 
          </td>
          <td>
            <%= link_to "#{trip.driver.name}", driver_path(trip.driver.id) %> 
          </td>
          <td>
            <%= link_to "#{trip.passenger.name}", passenger_path(trip.passenger.id) %> 
          </td>
          <td>
            <%= "$#{trip.cost}" %> 
          </td>
          <td>
            <%= trip.rating %> 
          </td>
          <td>
            <%= link_to "Edit", edit_trip_path(trip.id) %> 
            <%= link_to "Delete", trip_path(trip.id), method: :delete ,  data: {confirm: "Are you sure?"}%>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
