<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip, form_class: "trip form" do |f| %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5, step: 1  %>

  <%= f.label :Driver%>
  <%= f.select :driver_id, Driver.all.map{ |driver| [driver.name, driver.id] } %>

  <%= f.label :Passenger%>
  <%= f.select :passenger_id, Passenger.all.map{ |passenger| [passenger.name, passenger.id] } %>

  <%= f.label :cost%>
  <%= f.number_field :cost, in: 1.65..100.00, step: 0.01 %>

  <%= f.submit "#{action}", class: "trip form button"%>

<%end%>
