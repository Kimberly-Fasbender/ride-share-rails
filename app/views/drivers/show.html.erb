<h1>Driver View</h1>

<article>
  <h2>Name: <%= @driver.name %></h2>
  <ul>
    <li>
      <%= image_tag "https://api.adorable.io/avatars/200/.driver#{@driver.id}.png", alt: "Passenger #{@driver.id} Avatar"%>
    </li> 
    <li>
      Car: <%= "#{@driver.car_make} #{@driver.car_model}" %>
    </li>
    <li>
      Average Rating: <%= @driver.average_rating %>
    </li>
    <li>
      Total Earnings: <%= @driver.total_earnings %>
    </li>
    <li>
      <%= button_to "Go Online", availability_path(@driver.id), method: :patch %>
    </li>
    <li>
      <%= button_to "Delete", driver_path(@driver), method: :delete%>
    </li>
    <li>
      <%=  button_to "Edit", edit_driver_path(@driver), method: :get%>
    </li>
    <li>
      <%=  button_to "Driver List", drivers_path, method: :get%>
    </li>
  </ul>
</article>

