<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="main_nav">
    <%= link_to image_tag("https://i.ibb.co/yQpRhS3/k-S.png", 
                          size: "175x75", 
                          alt: "K&S RideShare Logo"), root_path %>
    <div class="dropdown">
      <button class="dropbtn">Drivers</button>
      <div class="dropdown-content">
        <%= link_to "List Drivers", drivers_path %>
        <%= link_to "Add Driver", new_driver_path %>
      </div>
    </div> 

    <div class="dropdown">
      <button class="dropbtn">Passengers</button>
      <div class="dropdown-content">
        <%= link_to "List Passengers", passengers_path %>
        <%= link_to "Add Passenger", new_passenger_path %>
      </div>
    </div>  
  </nav>

  <body>
    <%= yield %>
  </body>
</html>
